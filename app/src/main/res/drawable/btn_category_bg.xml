<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- checked -->
    <item android:drawable="@drawable/bg_category" android:state_checked="true" />

    <!-- selected -->
    <item android:drawable="@drawable/bg_category" android:state_selected="true" />

    <!-- pressed -->
    <item android:drawable="@drawable/bg_category" android:state_pressed="true" />

    <!-- focused -->
    <item android:drawable="@drawable/bg_category" android:state_focused="true" />

    <!-- default -->
    <item android:drawable="@drawable/bg_category_disable" />

</selector>