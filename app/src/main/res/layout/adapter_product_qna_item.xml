    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageViewThumbnail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="12dp"
                android:textColor="#8192a5"
                android:lineSpacingExtra="2sp"
                tools:text="따뚜아쥬 꾸뛰르 메탈릭 완벽 커버 쿠션 "/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewInquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#192028"
                android:lineSpacingExtra="0sp"
                tools:text="Q. 언제쯤 도착하는 건가요?? 발송 되는건가요??"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewReplyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="12dp"
                android:textColor="#9f56f2"
                android:lineSpacingExtra="2sp"
                android:text="답변보기"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutSpread"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonSpread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
