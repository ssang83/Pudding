<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/first_category"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="패션"
            android:layout_marginLeft="44dp"
            android:textSize="16sp"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="#192028"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43dp"
            android:background="@drawable/radio_btn_off"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_category"
        android:background="#f3f8fd"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5eaf0"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>

        <View
            android:id="@+id/botLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5eaf0"/>

    </LinearLayout>

</RelativeLayout>