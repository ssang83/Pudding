                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="left|center_vertical"
                                android:textSize="14dip"
                                android:textColor="#8192a5"
                                android:lines="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/notosanskr_medium"
                                android:text="@string/msg_cre_refund_price"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textViewRefundPrice"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:gravity="left|center_vertical"
                                android:textSize="14dip"
                                android:textColor="#9f56f2"
                                android:fontFamily="@font/notosanskr_bold"
                                tools:text="25,900원"/>
                        </LinearLayout>

                        <!--<androidx.appcompat.widget.AppCompatTextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/explain"-->
                            <!--android:fontFamily="@font/notosanskr_medium"-->
                            <!--android:textSize="12sp"-->
                            <!--android:includeFontPadding="false"-->
                            <!--android:layout_marginTop="10dp"-->
                            <!--android:layout_marginBottom="10dp"-->
                            <!--android:textColor="#546170"-->
                            <!--android:text="• 쿠폰할인으로 인해 구매한 상품 금액과 다르게 환불될 수 있습니다."/>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dip"
                                android:textColor="#9f56f2"
                                android:fontFamily="@font/notosanskr_bold"
                                android:text="@string/msg_cre_cancel_refund_warning"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="3dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/bg_dot"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dip"
                                    android:textColor="#546170"
                                    android:fontFamily="@font/notosanskr_medium"
                                    android:text="@string/msg_cre_cancel_refund_warning_comment1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="3dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/bg_dot"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dip"
                                    android:textColor="#546170"
                                    android:fontFamily="@font/notosanskr_medium"
                                    android:text="@string/msg_cre_cancel_refund_warning_comment2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 교환요청 -->
                    <LinearLayout
                        android:id="@+id/layoutForExchange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="left|center_vertical"
                                android:textSize="12sp"
                                android:textColor="#8192a5"
                                android:fontFamily="@font/notosanskr_medium"
                                android:text="배송비\n결제방법"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/textViewDeliveryFee1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#192028"
                                    android:fontFamily="@font/notosanskr_medium"
                                    android:text="단순변심일 경우, 왕복 배송비 5,000원"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/textViewDeliveryFee2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#192028"
                                    android:fontFamily="@font/notosanskr_medium"
                                    android:text="판매자 책임일 경우, 왕복 배송비 판매자 부담"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>

            <!-- 교환방법 타이틀 -->
            <LinearLayout
                android:id="@+id/layoutForMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#c9c9c9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f3f8fd" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMethod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#192028"
                    android:textSize="14dip"
                    android:paddingBottom="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="left|bottom"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/msg_cre_refund_request_method" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e5eaf0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_dot"/>

                    <androidx.appcompat.widget.AppCompatTextView
