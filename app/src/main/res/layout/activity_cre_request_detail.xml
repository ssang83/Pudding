            android:layout_height="1dp"
            android:background="#1e000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutTitle"
        android:layout_above="@+id/botBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#192028"
                android:textSize="14sp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="left|bottom"
                android:paddingLeft="15dp"
                tools:text="@string/msg_cre_cancel_product_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#e5eaf0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:paddingBottom="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:background="#FFFFFFFF">

                <!-- 상품명 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="left|center_vertical"
                        android:textSize="12sp"
                        android:textColor="#8192a5"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="@string/msg_cre_request_product"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewRequestProduct"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="left|center_vertical"
                        android:textSize="12sp"
                        android:textColor="#192028"
                        android:fontFamily="@font/notosanskr_medium"
                        tools:text="김망고"/>
                </LinearLayout>

                <!-- 구매옵션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="left|center_vertical"
                        android:textSize="12sp"
                        android:textColor="#8192a5"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="@string/msg_cre_request_product_option"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewOption"
                        tools:text="ivory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textColor="#192028"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 취소금액 -->
                <LinearLayout
                    android:id="@+id/layoutForCancelPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="left|center_vertical"
                        android:textSize="12sp"
                        android:textColor="#8192a5"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="상품금액"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="left|center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/notosanskr_medium"
                        tools:text="25,900원"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#c9c9c9" />

            <View
