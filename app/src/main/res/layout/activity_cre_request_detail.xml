                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/msg_cre_exchange_method_guide"
                        android:textSize="12dip"
                        android:textColor="#546170"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#c9c9c9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f3f8fd" />

            <!-- 주의사항 -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewWarning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#192028"
                android:textSize="14dip"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="left|bottom"
                android:paddingLeft="15dp"
                android:layout_marginTop="14dp"
                tools:text="@string/msg_cre_exchange_warnaing" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#c9c9c9" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 교환 시 주의사항 -->
                <LinearLayout
                    android:id="@+id/layoutForExchangeWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_dot"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_cre_exchange_warnaing_comment1"
                            android:textSize="12dip"
                            android:fontFamily="@font/notosanskr_regular"
                            android:textColor="#546170"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_dot"/>

                        <androidx.appcompat.widget.AppCompatTextView
