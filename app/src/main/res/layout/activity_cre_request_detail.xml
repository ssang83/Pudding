                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/dropdown_arrow_ico"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!-- 사유 -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextReasonDetail"
                    android:layout_width="274dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/spinnerLayer"
                    android:layout_toRightOf="@+id/textViewReason"
                    android:background="@drawable/bg_point_history_more"
                    android:textSize="14dip"
                    android:lineSpacingExtra="6sp"
                    android:gravity="top"
                    android:inputType="text"
                    android:textColorHint="#bcc6d2"
                    android:hint="@string/msg_cre_exchange_reason_detail_hint"
                    android:textColor="#bcc6d2"
                    android:maxLength="50"
                    android:paddingTop="7dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:visibility="visible"
                    android:imeOptions="actionDone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewReasonCount"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:layout_below="@+id/editTextReasonDetail"
                    android:gravity="right|center"
                    android:text="0/50"
                    android:textColor="#8192a5"
                    android:textSize="12sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewReasonCount">

