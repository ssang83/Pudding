            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDetailInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#192028"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:gravity="left|bottom"
                android:paddingLeft="15dp"
                android:fontFamily="@font/notosanskr_regular"
                tools:text="@string/msg_cre_cancel_detail_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#e5eaf0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#FFFFFF"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewReason"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#8192a5"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="@string/msg_cre_cancel_reason"/>

                <!--<Spinner-->
                    <!--android:id="@+id/spinnerRequestReason"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="11dp"-->
                    <!--android:layout_marginLeft="16dp"-->
                    <!--android:layout_toRightOf="@+id/textViewReason" />-->

                <RelativeLayout
                    android:id="@+id/spinnerLayer"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/textViewReason"
                    android:background="@drawable/light_gray_lined_bg">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/spinnerText"
                        android:layout_width="123dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:hint="선택하세요"
                        android:gravity="center_vertical"
                        android:textColorHint="#192028"
                        android:textColor="#192028"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14sp"/>
                    
                    <!--<Spinner-->
                        <!--android:id="@+id/spinnerRequestReason"-->
                        <!--android:layout_width="123dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:background="@null" />-->

                    <LinearLayout
                        android:id="@+id/rightLayer"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
