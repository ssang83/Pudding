<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ProgressBar
            android:id="@+id/mProgress"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/mImgThumbNail"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="centerCrop"
            tools:src="@android:drawable/ic_dialog_alert"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/mImgThumbNail"
            android:orientation="vertical"
            android:padding="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mBucketName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:textColor="#192028"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                tools:text="BucketName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mFileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto_light"
                android:padding="0dp"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#546170"
                android:textSize="12sp"
                tools:text="100"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/mItemLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#d9e1eb"/>

</LinearLayout>
