<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/grid_item_bg">

    <RelativeLayout
        android:id="@+id/main_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@drawable/trip_video_label" />

        <View
            android:id="@+id/image_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageViewThumbnail"
            android:background="#d9e1eb" />

        <RelativeLayout
            android:id="@+id/content_bot"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/image_line"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_category_beauty"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#ff6c6c"
                android:textSize="12dp"
                tools:text="뷰티" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:textColor="#ff6c6c"
                android:textSize="12sp"
                tools:text="17584" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/buttonLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textViewLikeCount"
                android:background="@drawable/btn_like_thumb" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/content_bot"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#192028"
            android:textSize="14sp"
            tools:text="스포츠카 키홀더 분석스포츠카 키홀더 분석스포츠카 키홀더 분석스포츠카 키홀더 분석스포츠카 키홀더 분석" />
    </RelativeLayout>
</RelativeLayout>