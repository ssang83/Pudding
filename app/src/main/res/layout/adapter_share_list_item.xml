        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="14sp"
                android:textColor="#192028"
                android:lineSpacingExtra="5sp"
                android:text="@string/msg_my_share_amount_price"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewAmountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="14sp"
                android:textColor="#192028"
                android:lineSpacingExtra="5sp"
                tools:text="152,350원"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutSharedUser"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_tag"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_gravity="center_vertical"
                android:text="@string/msg_my_share_user_count"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewUserCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                tools:text="25명"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_tag"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_gravity="center_vertical"
                android:text="@string/msg_my_share_product_sale"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewProductSalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_gravity="center_vertical"
                tools:text="152,350원"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_tag"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_gravity="center_vertical"
                android:text="@string/msg_my_share_product_click"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewProductClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_gravity="center_vertical"
                tools:text="152,350"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/b_line"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="1dp"
        android:layout_below="@+id/content"
        android:background="#1e000000" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/b_line"
        android:background="#f3f8fd" />
</RelativeLayout>