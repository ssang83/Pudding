<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="14sp"
                android:textColor="#192028"
                android:fontFamily="@font/notosanskr_medium"
                android:text="lovely_kim"
                android:includeFontPadding="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:textColor="#8192a5"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="2018.05.23"
                android:includeFontPadding="false"/>

        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:textSize="12sp"
        android:textColor="#546170"
        android:layout_marginTop="-3dp"
        android:fontFamily="@font/notosanskr_regular"
        android:text="[옵션]프리미엄린넨 데일리셔츠(린넨100), 옵션명2: FREE, NON-FREE(44-66)"
        android:includeFontPadding="false"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option"
        android:lineSpacingExtra="1dp"
        android:textSize="14sp"
        android:textColor="#192028"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="제품 구매하면 배송이 얼마나 걸릴까요?\n오늘 배송 구매하면 바로 배송될까요??ㅠㅠ 급하게 입어야 되서요.. 너무 구김이 많이 가요.. 감안하고 구입했으면 좋겠어요."
        android:includeFontPadding="false"/>

    <LinearLayout
        android:id="@+id/imageLayer"
        android:layout_below="@+id/content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/imageLayer1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:background="#e5eaf0"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageLayer2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:background="#e5eaf0"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/moreLayer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e5eaf0"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/moreBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/more_ico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/more_plus_ico"
                        android:layout_marginBottom="1dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_below="@+id/more_ico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="@string/msg_my_faq_more"
                        android:fontFamily="@font/notosanskr_medium"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bot_layer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/imageLayer"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/btnReport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="7dp"
            android:layout_alignParentRight="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reportIco"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/report_ico"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reportIco"
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:textColor="#192028"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/msg_my_setting_report"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notLikeLayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnReport"
            android:paddingRight="7dp"
            android:paddingLeft="7dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notLikeIco"
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bad_ico"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/strNotRecom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/notLikeIco"
                android:textSize="12sp"
                android:textColor="#192028"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/msg_not_recom"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/likeLayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/notLikeLayer"
            android:paddingRight="7dp"
            android:paddingLeft="7dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/likeIco"
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/like_thumb_ico"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/strRecom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/likeIco"
                android:textSize="12sp"
                android:textColor="#ff6c6c"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/msg_recom"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9e1eb"
        android:layout_below="@+id/bot_layer" />

</RelativeLayout>