        <!--android:gravity="center"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:textSize="14dp"-->
        <!--android:text="@string/msg_my_following"/>-->

</RelativeLayout>