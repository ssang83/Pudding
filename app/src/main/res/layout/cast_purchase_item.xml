<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#00000000">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginRight="20dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/remainCnt"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:textColor="#192028"
        android:includeFontPadding="false"
        android:text="12개"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quantity"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/remainCnt"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:textColor="#192028"
        android:includeFontPadding="false"
        android:text="12개"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/option"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/quantity"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:textColor="#192028"
        android:includeFontPadding="false"
        android:text="9호"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/option"
        android:layout_toRightOf="@+id/image"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_medium"
        android:textColor="#192028"
        android:includeFontPadding="false"
        tools:text="입생로랑 베르니 아 레는제목길면 두줄로 표시해"/>
</RelativeLayout>