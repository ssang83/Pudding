<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutMDPick"
        android:layout_width="match_parent"
        android:layout_height="368dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewMDPickBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pickTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="MD’s PICK"
            android:textColor="#192028"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMDPickTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickTitle"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:textColor="#192028"
            android:textSize="20sp"
            tools:text="2019트렌트 컬러 리빙 코랄" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMDPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMDPickTitle"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>

    <View
        android:id="@+id/shadows"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layoutMDPick"
        android:background="#1e000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/shadows"
        android:background="#f3f8fd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="TODAY’s VIDEO"
        android:textColor="#222222"
        android:textSize="16sp" />

</LinearLayout>