<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <!-- 뒤로가기 -->
        <RelativeLayout
            android:id="@+id/buttonClose"
            android:layout_width="60dp"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/close_black_ico"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/topTitleStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="#192028"
            android:layout_centerInParent="true"
            android:text="@string/msg_reserve_broadcast_title"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1e000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_booked"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/msg_reservation_complete"
                android:textSize="18sp"
                android:textColor="#5774f4"
                android:fontFamily="@font/notosanskr_medium"
                android:layout_marginBottom="21dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/msg_reservation_complete_1"
                android:textSize="14sp"
                android:textColor="#546170"
                android:fontFamily="@font/notosanskr_medium"
                android:layout_marginBottom="12dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonConfirm"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_cookie_dialog_off"
                android:gravity="center"
                android:text="@string/msg_confirm"
                android:textSize="16sp"
                android:textColor="#9f56f2"
                android:fontFamily="@font/notosanskr_medium"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>