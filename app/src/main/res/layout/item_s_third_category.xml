<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/thirdCategoryLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thirdCategory"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center_vertical"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="7dp"
            android:includeFontPadding="false"
            android:text="전체"
            android:layout_height="39dp"/>
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thirdIco"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/check_circle_ico"/>
    </LinearLayout>


    <View
        android:id="@+id/under_line"
        android:layout_below="@+id/thirdCategoryLayer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f8fd" />
</RelativeLayout>