<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="272dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 타이틀 바 -->
        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="48dp"
            android:background="@drawable/popup_topside">

            <!-- Depth Title -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCRETitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/msg_my_shopping_order_detail_delivery"
                android:textColor="#192028"
                android:textSize="20sp" />

            <!-- 닫기 버튼 -->
            <RelativeLayout
                android:id="@+id/buttonClose"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_popup_close" />

            </RelativeLayout>
            <!--<android.support.v7.widget.AppCompatImageButton-->
            <!--android:id="@+id/buttonClose"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="46dp"-->
            <!--android:padding="12dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@null"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@drawable/ic_popup_close" />-->
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bcc6d2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:text="asdiofjasfdlja;sfkdlja;jfd;ajfaksdf;aljfa;sdfj;asfkdlj;asdfkj;asdfkla;sdjf;asdjfsda"
                android:textColor="#192028"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bcc6d2" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/popup_bottomside"
            android:fontFamily="@font/notosanskr_bold"
            android:text="@string/msg_cre_confirm"
            android:textColor="#192028"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>