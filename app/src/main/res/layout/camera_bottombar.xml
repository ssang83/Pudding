<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/recorder_delete_icon"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/audio_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:gravity="center"
                android:text="라디오모드"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>

            <CheckBox
                android:id="@+id/front_camera_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="true"
                android:gravity="center"
                android:text="전면카메라"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>

            <CheckBox
                android:id="@+id/pip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:text="pip"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"></CheckBox>

            <CheckBox
                android:id="@+id/click_to_switch_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:gravity="center"
                android:text="필터"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/watermark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="true"
                android:text="워터마크"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px" />

            <Button
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:text="비디오선택"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px" />

            <CheckBox
                android:id="@+id/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:text="mute"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>

            <CheckBox
                android:id="@+id/bgm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:text="bgm"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>

            <CheckBox
                android:id="@+id/click_to_select_audio_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:text="audio_filter"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>

            <CheckBox
                android:id="@+id/ear_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#11123456"
                android:checked="false"
                android:text="비디오 사운드"
                android:textColor="@color/font_color_35"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"></CheckBox>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>