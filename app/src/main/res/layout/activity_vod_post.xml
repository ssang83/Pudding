<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- 타이틀 바 -->
    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff">

        <!-- 뒤로가기 -->
        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/back_ico" />

        <!-- 타이틀바 제목 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosanskr_medium"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/msg_broadcasting_vod_upload"
            android:textColor="#192028"
            android:textSize="20dip" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layoutTitle"
        android:background="#80c9c9c9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewSelected"
                    android:layout_width="252dp"
                    android:layout_height="142dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:background="@drawable/bg_direct_message" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPreView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center"
                    android:text="@string/msg_broadcasting_vod_preview"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19dp"
                android:background="#d9e1eb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/post_vod_ico" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageViewOpen"
                    android:fontFamily="@font/notosanskr_medium"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/msg_broadcasting_vod_open"
                    android:textColor="#192028"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/buttonOpenSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_caster_notice" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="55dp"
                android:background="#d9e1eb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/post_share_ico" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageViewShare"
                    android:fontFamily="@font/notosanskr_medium"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/msg_broadcasting_vod_share"
                    android:textColor="#192028"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/buttonShareSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_caster_notice" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="55dp"
                android:background="#d9e1eb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/post_review_ico" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageViewReply"
                    android:fontFamily="@font/notosanskr_medium"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/msg_broadcasting_vod_reply"
                    android:textColor="#192028"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/buttonReplySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_caster_notice" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="55dp"
                android:background="#d9e1eb" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSaveTemp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_caster_finish_no"
            android:fontFamily="@font/notosanskr_medium"
            android:gravity="center"
            android:text="@string/msg_broadcasting_vod_save_temp"
            android:textColor="#bcc6d2"
            android:textSize="16dip" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_caster_finish_yes"
            android:fontFamily="@font/notosanskr_medium"
            android:gravity="center"
            android:text="@string/msg_broadcasting_vod_upload"
            android:textColor="#FFFFFF"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:gravity="center"
        android:soundEffectsEnabled="false"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ProgressTheme" />
    </LinearLayout>

</RelativeLayout>